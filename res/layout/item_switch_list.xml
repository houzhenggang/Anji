<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/bar_2" 
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_light" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_type"
            android:text="客厅顶灯"
            android:textColor="@color/item_text"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_group_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_1" />

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_group_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-4dp"
            android:layout_toRightOf="@+id/img_group_type"
            android:textColor="@color/item_text"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/cb_item_switch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:button="@drawable/checkbox_selector" />
        <Button 
            android:id="@+id/bt_delete"
            android:visibility="gone"
            android:text="@string/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/delete_device_selector"
            />
    </RelativeLayout>

</LinearLayout>