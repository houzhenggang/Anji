<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/title_background"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_regiest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tab_telecontrol"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/confrim_button"
            style="@style/control_btn"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_confirm" />

        <ImageButton
            android:id="@+id/right_button"
            style="@style/control_btn"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/confrim_button"
            android:src="@drawable/btn_right" />

        <ImageButton
            android:id="@+id/top_button"
            style="@style/control_btn"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_above="@+id/confrim_button"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_up" />

        <ImageButton
            android:id="@+id/left_button"
            style="@style/control_btn"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/confrim_button"
            android:src="@drawable/btn_left" />

        <ImageButton
            android:id="@+id/bottom_button"
            style="@style/control_btn"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_below="@+id/confrim_button"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_dowm" />

        <ImageButton
            android:id="@+id/back_button"
            style="@style/control_btn"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dip"
            android:src="@drawable/btn_back" />

        <ImageButton
            android:id="@+id/add_button"
            style="@style/control_btn"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignLeft="@+id/left_button"
            android:src="@drawable/btn_s_up" />

        <ImageButton
            android:id="@+id/cut_button6"
            style="@style/control_btn"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignRight="@+id/right_button"
            android:src="@drawable/btn_s_dowm" />
    </RelativeLayout>

</LinearLayout>